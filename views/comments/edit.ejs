<% include ../partials/header %>
    <div class="container"> 
        <div class="row">
            <h1 style="text-align: center">Edit Comment</h1>
            <div style="width:30%; margin:28px auto">
                <form action="/campgrounds/<%= camp_id %>/comments/<%=comment.id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" value="<%=comment.text %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>
