<% include ../partials/header %>
    <div class="container"> 
        <div class="row">
            <h1 style="text-align: center"> Edit <%= camp.name %></h1>
            <div style="width:30%; margin:28px auto">
                <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="editedCamp[name]" value="<%= camp.name%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="editedCamp[price]" value="<%= camp.price %>" min="0.00" step="0.01">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="editedCamp[image]" value="<%=camp.image%>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="editedCamp[description]" value="<%=camp.description%>">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="editedCamp[location]" id="location" value="<%= camp.location %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">submit!</button>
                    </div>
                </form>
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>
<% include ../partials/footer %>
